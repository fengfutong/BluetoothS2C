<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fengfutong.bluetoothc2s.MainActivity">

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:background="@drawable/v1_shape_red"
        android:id="@+id/tv_server"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="server_click"
        android:text="将本机作为服务器!" />
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:background="@drawable/v1_shape_green"
        android:id="@+id/tv_client"
        android:onClick="client_click"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="将本机作为客户端!"
         />
</LinearLayout>
